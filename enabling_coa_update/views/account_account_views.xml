<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_account_form" model="ir.ui.view">
            <field name="name">account.account.form</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet" position="before">
                    <header>
                        <button name="update_companies" string="Update Companies" type="object" />
                        <button name="update_wm_companies" string="Update WM Companies" type="object" />
                        <button name="update_wr_companies" string="Update WR Companies" type="object" />
                    </header>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
