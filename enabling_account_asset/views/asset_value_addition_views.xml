<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="asset_value_addition_form">
        <field name="name">wizard.asset.value.addition.form</field>
        <field name="model">asset.value.addition</field>
        <field name="arch" type="xml">
            <form string="Value Additions">
                <field name="asset_id" invisible="1"/>
                <group>
                    <group string="Modification">
                        <field name="name" placeholder="Modification reason" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    </group>
                    <group string="New Values">
                        <field name="value_amount" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="tax_value_amount" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    </group>
                    <group string="Increase Accounts">
                        <field name="account_asset_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="account_asset_counterpart_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    </group>
                    <group>
                    	<field name="analytic_account_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="state" invisible="1"/>
                        <field name="journal_id" attrs="{'readonly': [('state', '!=', 'draft')],'invisible': [('journal_id', '=', False)]}"/>
                    </group>
                </group>
                <footer>
                    <button name="modify" string="Modify" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                </footer>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="asset_value_addition_tree">
        <field name="name">wizard.asset.value.addition.form</field>
        <field name="model">asset.value.addition</field>
        <field name="arch" type="xml">
            <tree string="Modify Asset">

                <field name="name" placeholder="Modification reason" required="1"/>
                <field name="date"/>
                <field name="value_amount"/>
                <field name="tax_value_amount"/>
                <field name="account_asset_id" optional="hide"/>
                <field name="account_asset_counterpart_id" optional="hide"/>
                <field name="analytic_account_id" optional="hide"/>

            </tree>
        </field>
    </record>


    <record model="ir.ui.view" id="asset_revalue_form">
        <field name="name">wizard.asset.revalue.form</field>
        <field name="model">asset.revalue</field>
        <field name="arch" type="xml">
            <form string="Revalue">
                <field name="asset_id" invisible="1"/>
                <group>
                    <group string="Modification">
                        <field name="name" placeholder="Modification reason" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    </group>
                    <group string="Revaluation">
                        <field name="value_amount" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="book_reval" invisible="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="currency_id" invisible="1"/>
                        <!-- <field name="tax_value_amount" attrs="{'readonly': [('state', '!=', 'draft')]}"/> -->
                    </group>
                    <group string="Increase Accounts">
                        <field name="account_asset_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="account_asset_counterpart_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    </group>
                    <group>
                        <field name="analytic_account_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="state" invisible="1"/>
                        <field name="journal_id" attrs="{'readonly': [('state', '!=', 'draft')],'invisible': [('journal_id', '=', False)]}"/>
                    </group>
                </group>
                <footer>
                    <button name="modify" string="Modify" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                </footer>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="asset_revalue_tree">
        <field name="name">wizard.asset.revalue.form</field>
        <field name="model">asset.revalue</field>
        <field name="arch" type="xml">
            <tree string="Modify Asset">
                <field name="name" placeholder="Modification reason" required="1"/>
                <field name="date"/>
                <field name="value_amount"/>
                <field name="tax_value_amount"/>
                <field name="account_asset_id" optional="hide"/>
                <field name="account_asset_counterpart_id" optional="hide"/>
                <field name="analytic_account_id" optional="hide"/>

            </tree>
        </field>
    </record>



</odoo>
